  <script>
    const pages = document.querySelectorAll('.page');
    let current = 0;

    function flipForward() {
      if (current < pages.length) {
        pages[current].classList.add('flipped');
        current++;
      }
    }

    function flipBackward() {
      if (current > 0) {
        current--;
        pages[current].classList.remove('flipped');
      }
    }

    let startX = 0;
    document.getElementById('book').addEventListener('touchstart', e => {
      startX = e.touches[0].clientX;
    });

    document.getElementById('book').addEventListener('touchend', e => {
      let endX = e.changedTouches[0].clientX;
      let deltaX = endX - startX;
      if (Math.abs(deltaX) > 50) {
        deltaX < 0 ? flipForward() : flipBackward();
      }
    });

    document.getElementById('book').addEventListener('click', flipForward);
  </script>
