<script>
  function openPopup(url) {
    const modal = document.getElementById('popupModal');
    const frame = document.getElementById('popupFrame');
    frame.src = url;
    modal.style.display = 'flex';
  }

  function closePopup() {
    const modal = document.getElementById('popupModal');
    const frame = document.getElementById('popupFrame');
    frame.src = '';
    modal.style.display = 'none';
  }
</script>
